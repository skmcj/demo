{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*"
  ]
}